body.no-js .product-options > .select {
  display: block;
}

.product-options > .select {
  display: none;
}

.product-options [data-for-variant] {
  padding: 4px 8px;
  display: inline-block;
  background: #333;
  font-weight: 700;
  color: white;
  text-transform: uppercase;
  margin: 1em;
  margin-left: 0;
  margin-top: 0;
  border: none;
}

.product-options [data-for-variant]:hover {
  background: #EE3531;
}
